<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Spring Boot 기본 설정 포함 -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender (STDOUT으로 대체 - Docker 표준 출력) -->
    <appender name="FILE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger 설정 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- 특정 패키지의 로그 레벨 조정 -->
    <!-- BithumbPublicApi 에러는 WARN으로 (Jackson 역직렬화 에러 등) -->
    <logger name="com.ant.cointrading.api.bithumb.BithumbPublicApi" level="WARN"/>

    <!-- MarketConditionChecker 에러는 WARN으로 -->
    <logger name="com.ant.cointrading.risk.MarketConditionChecker" level="WARN"/>

    <!-- OrderExecutor 관련 에러는 WARN으로 -->
    <logger name="com.ant.cointrading.order.OrderExecutor" level="WARN"/>
</configuration>
