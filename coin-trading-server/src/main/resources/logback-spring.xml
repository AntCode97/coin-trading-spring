<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Spring Boot 기본 설정 포함 -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Spring 환경변수 읽기 -->
    <springProperty name="SLACK_WEBHOOK_URL" source="slack.webhook-url"/>

    <!-- Slack Appender (ERROR 레벨만 전송) -->
    <appender name="SLACK" class="com.github.maricn.logback.SlackAppender">
        <webhookUri>${SLACK_WEBHOOK_URL:-}</webhookUri>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </layout>
    </appender>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File Appender (STDOUT으로 대체 - Docker 표준 출력) -->
    <appender name="FILE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger 설정 (ERROR는 Slack으로도 전송) -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="SLACK"/>
    </root>

    <!-- 특정 패키지의 로그 레벨 조정 -->
    <!-- BithumbPublicApi 에러는 WARN으로 (Jackson 역직렬화 에러 등) -->
    <logger name="com.ant.cointrading.api.bithumb.BithumbPublicApi" level="WARN"/>

    <!-- MarketConditionChecker 에러는 WARN으로 -->
    <logger name="com.ant.cointrading.risk.MarketConditionChecker" level="WARN"/>

    <!-- OrderExecutor 관련 에러는 WARN으로 -->
    <logger name="com.ant.cointrading.order.OrderExecutor" level="WARN"/>
</configuration>
