            "body": {
              "mode": "raw",
              "raw": "{\n  \"key\": \"trading.enabled\",\n  \"value\": \"true\",\n  \"category\": \"trading\",\n  \"description\": \"실거래 활성화 여부\"\n}"
            }
          }
        },
        {
          "name": "Disable Trading",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/settings",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
