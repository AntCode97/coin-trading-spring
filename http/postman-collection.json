      "name": "01. Health Check",
      "item": [
        {
          "name": "Actuator Health",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/actuator/health"
          }
        },
        {
          "name": "Actuator Metrics",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/actuator/metrics"
          }
