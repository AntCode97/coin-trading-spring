          "name": "Trading Health",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/trading/health"
          }
        },
        {
          "name": "Trading Enabled Status",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/trading/enabled"
          }
        }
