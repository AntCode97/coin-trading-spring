              "raw": "{{baseUrl}}/api/trading/risk/BTC_KRW?balance=1000000",
              "host": ["{{baseUrl}}"],
              "path": ["api", "trading", "risk", "BTC_KRW"],
              "query": [
                {
                  "key": "balance",
                  "value": "1000000"
                }
              ]
