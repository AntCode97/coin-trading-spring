# ===========================================
# Coin Trading Spring - 환경 변수
# ===========================================
# 이 파일을 .env로 복사 후 실제 값 입력

# Bithumb API (필수)
BITHUMB_ACCESS_KEY=your_bithumb_access_key
BITHUMB_SECRET_KEY=your_bithumb_secret_key

# MySQL (필수)
# NAS에서 실행 시: host.docker.internal 또는 NAS IP 사용
MYSQL_URL=jdbc:mysql://host.docker.internal:3306/coin_trading?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=Asia/Seoul
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password

# Slack 알림 (선택)
SLACK_WEBHOOK_URL=

# 트레이딩 설정
TRADING_ENABLED=false
ORDER_AMOUNT_KRW=10000
MAX_DRAWDOWN_PERCENT=10.0
STRATEGY_TYPE=MEAN_REVERSION

# LLM API 키 (사용할 것만 설정)
LLM_OPTIMIZER_ENABLED=false
SPRING_AI_ANTHROPIC_API_KEY=
SPRING_AI_OPENAI_API_KEY=
